			<!--<directory>/target</directory>-->
			<!--<outputDirectory>/jar</outputDirectory>-->
			<!--<includes>-->
				<!--<include>HunterDataExport-1.0-SNAPSHOT.jar</include>-->
			<!--</includes>-->
